
@{
    ViewData["Title"] = "Licença";
}


<br />
<h1>Lincençiar o Software</h1>
<hr />

@if (ViewBag.Color == "ERROR")
{
    <div class="alert alert-danger text-center" role="alert">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong> @ViewBag.Message </strong>
    </div>

}

<form>
    <div class="form-group">
        <label for="machineID">ID Gerado</label>
        <input type="text" class="form-control" id="machineIDtxt" aria-describedby="emailHelp" readonly value="@ViewData["machineID"]">
        <small id="emailHelp" class="form-text text-muted">Codigo unico gerado</small>
    </div>
    <div class="form-group">
        <label for="licenseID">Licença</label>
        <input type="text" class="form-control" placeholder="Insira a sua licença..." aria-label="licenseID" aria-describedby="button-addon4" name="licenseID" value="@ViewData["licenseKey"]">
    </div>


    <button type="submit" class="btn btn-primary">Ativar</button>
</form>