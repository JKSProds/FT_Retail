@model FT_Retail.Models.Loja

@{
    ViewData["Title"] = "Lojas";
}

<br />
<h1>Dados da Loja</h1>

<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container">
        <div class="row">
            <div class="form-group col-2">
                <label asp-for="IdLoja" class="control-label"></label>
                <input asp-for="IdLoja" class="form-control" readonly/>
                <span asp-validation-for="IdLoja" class="text-danger"></span>
            </div>
            <div class="form-group col-5">
                <label asp-for="NomeEmpresa" class="control-label"></label>
                <input asp-for="NomeEmpresa" class="form-control" readonly/>
                <span asp-validation-for="NomeEmpresa" class="text-danger"></span>
            </div>
            <div class="form-group col-5">
                <label asp-for="NomeLoja" class="control-label"></label>
                <input asp-for="NomeLoja" class="form-control" readonly/>
                <span asp-validation-for="NomeLoja" class="text-danger"></span>
            </div>
            <div class="w-100"></div>
            <div class="form-group col-lg-12">
                <label asp-for="MoradaLoja" class="control-label"></label>
                <input asp-for="MoradaLoja" class="form-control" readonly/>
                <span asp-validation-for="MoradaLoja" class="text-danger"></span>
            </div>
        <div class="w-100"></div>
        <div class="form-group col-6">
            <label asp-for="IPLoja" class="control-label"></label>
            <input asp-for="IPLoja" class="form-control" readonly/>
            <span asp-validation-for="IPLoja" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="NBalancas" class="control-label"></label>
            <input asp-for="NBalancas" class="form-control" readonly/>
            <span asp-validation-for="NBalancas" class="text-danger"></span>
        </div>
 
    </div>
    </div>
</form>

<br />
<div>
    <a class="btn-danger btn-lg" asp-controller="Home" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
